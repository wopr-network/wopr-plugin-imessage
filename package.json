{
  "author": "TSavo",
  "dependencies": {
    "winston": "^3.11.0"
  },
  "description": "iMessage/SMS integration for WOPR via imsg CLI (macOS only)",
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@types/node": "^20.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "wopr",
    "plugin",
    "imessage",
    "sms",
    "macos"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "name": "wopr-plugin-imessage",
  "os": [
    "darwin",
    "linux"
  ],
  "peerDependencies": {
    "wopr": ">=0.0.1"
  },
  "scripts": {
    "build": "tsc",
    "check": "biome check src/ && tsc --noEmit",
    "dev": "tsx src/index.ts",
    "format": "biome format --write src/",
    "lint": "biome check src/",
    "lint:fix": "biome check --fix src/",
    "watch": "tsc --watch"
  },
  "type": "module",
  "types": "dist/index.d.ts",
  "version": "1.0.0"
}
